<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_Lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#A1A2A2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/right_hint" />

        <ImageView
            android:id="@+id/img_hint"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/left_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_no_frame_bg"
        android:orientation="vertical" >

        <!-- android:textColor="#1D8EFD" -->

        <TextView
            android:id="@+id/photo_sure"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="#1D8EFD"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/photo_cancel"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@drawable/et_no_frame_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_red"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>